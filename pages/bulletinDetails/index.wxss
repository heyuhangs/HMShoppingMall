/* pages/bulletinDetails/index.wxss */
.list-con{
    width: 95%;
    margin: 0 auto;
    margin-top: 180rpx;
}
.list-con-title{
    font-weight: bold;
    font-size: 38rpx;
    margin: 20rpx 0;
}
.list-con-date{
    font-size: 28rpx;
    color: #999;
    margin-bottom: 20rpx;
}
.list-con-main{
    color: #333;
    font-size: 30rpx;
    line-height: 45rpx;
}
.top-header {
    border-bottom: 0;
}

.container {
    width: 100%;
    height: 100%;
    margin-top: 130rpx;
}

.header-name{
    line-height: 270rpx !important;
}
.header-container {
    background-color: #fff;
}

.iphone {
    margin-top: 180rpx;
}

.tab-header {
    width: 100%;
    padding-top: 10px;
    background-color: #fff;
}

.tab-header view {
    display: inline-block;
    width: 50%;
    text-align: center;
    font-size: 30rpx;
    color: #999;
    border-bottom: 1px solid #f5f5f5;
    height: 35px;
    font-weight: 300;
}

.tab-header .active {
    color: #b5272d;
    border-bottom: 1px solid #b5272d;
}

.tab-container {
    width: 100%;
    line-height: 160%;
}

.tab-container .tab-item {
    width: 100%;
    display: none;
}

.tab-container .tab-item.active {
    display: block;
}

.tab-item-list {
    background-color: #fff;
    /*margin-top: 10px;*/
    padding: 15rpx;
    /*height: 75px;*/
    overflow: hidden;
    border-bottom: 1px solid #f5f5f5;
}
.list-info-money{
    display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;
    overflow: hidden;
    line-height: 37rpx;
    font-size: 28rpx;
}

/*.tab-item-list image {*/
/*  width: 100px;*/
/*  height: 100px;*/
/*  float: left;*/
/*  border-radius: 6rpx;*/
/*}*/

.tab-item-list-info {
    width: 100%;
    box-sizing: border-box;
    padding-left: 10px;
    float: left;
    font-size: 30rpx;
    color: #333;
}
.list-info{
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.list-info-title {
    display: inline-block;
    font-weight: 500;
    width: 80%;
    font-size: 37rpx;
    margin-bottom: 10rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.list-info-date{
    display: block;
    width: 100%;
    text-align: right;
    margin-top: 5rpx;
    font-size: 25rpx;
    color: #666;
    /*float: right;*/
}
.list-info-detail{
    font-size: 48rpx;
    color: #EE7600;
}

.list-info-money {
    font-size: 25rpx;
    color: #666;
}
.list-infi-money-date{
    color: #666;
}

.money-min, .money-max {
    display: inline-block;
}

.money-min text {
    font-size: 28rpx;
    color: #b5272d;
}

.money-max {
    padding-left: 15px;
    color: #999;
    text-decoration: line-through;
}

.list-info-info {
    font-size: 26rpx;
    color: #b5272d;
}

.status-box {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}

.status-box .status-label {
    width: 50%;
    height: 100%;
    text-align: center;
    font-size: 28rpx;
    color: #353535;
    box-sizing: border-box;
    position: relative;
}

.status-box .status-label.active {
    color: #b5272d;
    border-bottom: 6rpx solid #b5272d;
}

.status-box .status-label .red-dot {
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    left: 125rpx;
    top: 20rpx;
    background-color: #b5272d;
    border-radius: 50%;
}
.no-more-goods {
    text-align: center;
    margin-top: 50%;
}

.no-order-img {
    width: 110px;
    height: 110px;
}

.no-more-goods .text {
    font-size: 28rpx;
    color: #999;
    margin-top: -5px;
}
