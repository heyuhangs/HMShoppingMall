.show-container .show-box {
    width: 100%;
    margin: 0 auto;
    height: 600rpx;
    background-color: #fff;
    margin-top: 15%;
    border-radius: 10rpx;
}

.show-logo-box {
    text-align: center;
    width: 80%;
    border-bottom: 1px solid #f5f5f5;
    margin: 0 auto;
    padding-top: 20px;
}

.show-logo-box image {
    width: 155rpx;
    height: 155rpx;
    border-radius: 50%;
    display: block;
    margin: 0 auto;
}

.show-mall-name {
    font-size: 38rpx;
    margin-top: 55rpx;
    margin-bottom: 30rpx;
    color: #333;
}

.show-text-box {
    margin-top: 10%;
    margin-bottom: 20%;
}

.show-text-name {
    font-size: 35rpx;
    color: #333;
    width: 85%;
    margin: 0 auto;
    margin-bottom: 40rpx;
}

.show-text-info {
    width: 80%;
    margin: 0 auto;
    font-size: 28rpx;
    color: #999;
    margin-top: 25rpx;
}

.show-text-info text {
    margin-right: 10rpx;
    font-size: 30rpx;
}

.show-box button::after {
    border-radius: 4rpx;
    border: 0;
}

.show-box button {
    width: 80%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    background-color: #04be01;
    color: #fff;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
}

.newcoupons-hover {
    position: fixed;
    bottom: 20rpx;
    right: 20rpx;
    width: 150rpx;
    height: 150rpx;
    transition: all 0.6s;
}

.modal-box {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    background: rgba(255, 255, 255, 0.8);
    overflow: hidden;
    z-index: 9999999;
}

.modal-body {
    width: 100%;
    height: 100%;
    text-align: center;
}

.modal-content {
    z-index: 999;
    margin-top: 40%;
}

.fenxiang {
    width: 70%;
    border-radius: 4px;
    transition: all 0.6s;
}

.knowBtnImg {
    width: 30px;
    height: 30px;
    display: block;
    margin: auto;
    margin-top: 10px;
}
.show-main{
    width: 100%;
}
.show-main .show-main-title{
    display: block;
    text-align: center;
    padding: 20rpx 0;
    color: #666;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    font-size: 30rpx;
}
.show-main-con{
    display: block;
    color: #666;
    padding: 40rpx 0;
    border-bottom: 1px solid #eee;
    padding-left: 20rpx;
    font-size: 26rpx;
}
.xy{
    padding: 50rpx 0;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    color: #666;
    font-size: 26rpx;
    vertical-align: center;
    height: 50rpx;
    line-height: 50rpx;
    padding-left: 5%;
}
.radtxt{
    float: left;
}
.xy .a{
    color: #04be01;
}
.xy .radios{
    float: left;
    width: 60rpx;
    height: 60rpx;
    vertical-align: center;
}
.xy .radios radio{
    width: 50rpx;
    height: 50rpx;
}
